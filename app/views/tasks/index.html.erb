<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <i class="fa-regular fa-square-check"></i>
    <% else %>
      <i class="fa-regular fa-square-full"></i>
    <% end %>
    <li><%= link_to "#{task.title}", task_path(task) %> - <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_path %>
